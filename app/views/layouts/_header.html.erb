<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "トレンド動画", root_path, id: "logo" %>
    <button id="hamburger" type="button" class="navbar-toggle collapsed">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="navbar-left col-xs-7">
      <%= search_form_for @q, url: posts_path, html: { class: "form-inline", role: "form" } do |f| %>
        <div class="input-group">
          <%= f.text_field :title_cont, class: "form-control", placeholder: '動画を検索' %>
          <span class="input-group-btn">
            <%= f.submit "検索する", class: "btn btn-default" %>
          </span>
        </div>
      <% end %>
    </div>
    <nav class="navbar-right">
      <ul id="navbar-menu" class="nav navbar-nav collapse navbar-collapse">
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Guest log in", users_guest_sign_in_path, data: { "turbo-method": :post } %></li>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
