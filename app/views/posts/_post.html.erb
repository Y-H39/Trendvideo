<span class="gravatar"><%= link_to gravatar_for(post.user, size: 50), post.user %></span>
<span class="user"><%= link_to post.user.name, post.user %></span>
<span class="title"><%= post.title %></span>
<div class="video-container">
  <iframe class="url" src="https://www.youtube.com/embed/<%=post.url.last(31)%>"
    frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen></iframe>
</div>
<span class="comment"><%= post.comment %></span>
<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), class: "like-link", data: { "turbo-method": :delete } do %>
      <i class="fa fa-heart unlike-btn"></i>
    <% end %>
    <span class="favorite"><%= post.favorites.count %> いいね</span>
  <% else %>
    <%= link_to post_favorites_path(post), class: "like-link", data: { "turbo-method": :post } do %>
      <i class="fa fa-heart like-btn"></i>
    <% end %>
    <span class="favorite"><%= post.favorites.count %> いいね</span>
  <% end %>
<% end %>
<span class="timestamp">
  Posted <%= time_ago_in_words(post.created_at) %> ago.
  <% if post.user == current_user %>
    <%= link_to "delete", post_path(post.id), data: { "turbo-method": :delete, turbo_confirm: "You sure?" } %>
  <% end %>
</span>
